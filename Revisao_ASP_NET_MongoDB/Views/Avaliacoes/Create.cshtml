@model Revisao_ASP_NET_MongoDB.Models.Avaliacao

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Avaliação</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Data_Avaliacao" class="control-label"></label>
                <input asp-for="Data_Avaliacao" class="form-control" />
                <span asp-validation-for="Data_Avaliacao" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control" min="1" max="5" />
                <span asp-validation-for="Nota" class="text-danger"></span>

            </div>

            <div class="form-group">

                <label asp-for="Id_Carro" class="control-label"></label>
                <select asp-for="Id_Carro" class="form-control">

                    @foreach (Carro carro in ViewBag.Carros) {
                        <option value="@carro.Id">@carro.Nome</option>
                    }

                </select>
                <span asp-validation-for="Id_Carro" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
